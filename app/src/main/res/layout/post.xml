
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:id="@+id/list_item_home"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/title_item_home"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="assasasasdcdcdasas"
        app:layout_constraintBottom_toTopOf="@+id/img_item_home"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_item_home"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/item_home_pinterest"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:text="19 personnes sont interesser.."
        app:layout_constraintStart_toEndOf="@+id/item_home_interest"
        app:layout_constraintTop_toBottomOf="@+id/img_item_home" />

    <Button
        android:id="@+id/item_home_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="s'interesser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_item_home" />

    <ImageButton
        android:id="@+id/item_home_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_item_home"
        app:srcCompat="@drawable/ic_menu_send" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintCircleRadius="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/img_item_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/ic_message_black_24dp" />

</android.support.constraint.ConstraintLayout>